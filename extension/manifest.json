{
  "manifest_version": 3,
  "name": "LinkedIn CRM Agent",
  "version": "0.1",
  "description": "Prototype LinkedIn AI agent for CRM and outreach.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "LinkedIn CRM"
  }
}
